<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/new_top_bar_height"
    android:background="@drawable/header_bg">

    <ImageView
        android:id="@+id/header_back"
        android:layout_width="@dimen/width_common_m"
        android:layout_height="@dimen/height_common_l"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/top_bar_left_back" />

    <ImageView
        android:id="@+id/header_right_btn"
        android:layout_width="@dimen/width_common_m"
        android:layout_height="@dimen/height_common_l"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@drawable/top_bar_right_home_btn" />

    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_common_s"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/header_right_btn"
        android:layout_toRightOf="@id/header_back"
        android:background="@drawable/top_bar_search_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/height_common_s_s"
            android:layout_height="@dimen/height_common_s_s"
            android:layout_marginLeft="@dimen/common_space_m"
            android:layout_marginRight="@dimen/common_space_m"
            android:scaleType="center"
            android:src="@drawable/home_search_icon" />

        <TextView
            android:id="@+id/header_tv"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_common_s"
            android:gravity="center_vertical"
            android:hint="@string/search_hint"
            android:singleLine="true"
            android:textColor="@color/black_dark_tv"
            android:textColorHint="@color/tv_color_gray"
            android:textSize="@dimen/common_tv_size_l" />
    </LinearLayout>
</RelativeLayout>