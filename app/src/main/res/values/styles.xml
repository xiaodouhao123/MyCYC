<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="bottom_radiogroup">

        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textColor">@drawable/selector_rb_home_color</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="tv_style_common">
        <item name="android:textSize">@dimen/common_tv_size_l</item>
        <item name="android:textColor">@color/tv_color_black</item>
    </style>
    <style name="tv_style_red_dp_l">
        <item name="android:textSize">@dimen/home_tv_l_size</item>
        <item name="android:textColor">@color/tv_color_red</item>
    </style>
    <style name="tv_style_gray_dp_m">
        <item name="android:textSize">@dimen/home_tv_s_size</item>
        <item name="android:textColor">@color/tv_color_gray</item>
    </style>
    <style name="mProgressBar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxWidth">60.0dip</item>
        <item name="android:maxHeight">60.0dip</item>
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateDrawable">@drawable/cyc_progress_anim</item>
        <item name="android:indeterminateDuration">600</item>
        <item name="android:minWidth">60.0dip</item>
        <item name="android:minHeight">60.0dip</item>
    </style>
    <style name="tv_style_uncommon">
        <item name="android:textSize">@dimen/common_tv_size_l</item>
        <item name="android:textColor">@color/tv_color_gray</item>
    </style>
    <style name="common_padding_m">
        <item name="android:paddingLeft">@dimen/common_space_m</item>
        <item name="android:paddingTop">@dimen/common_space_m</item>
        <item name="android:paddingRight">@dimen/common_space_m</item>
        <item name="android:paddingBottom">@dimen/common_space_m</item>
    </style>
    <style name="tv_style_uncommon_red">
        <item name="android:textSize">@dimen/common_tv_size_l</item>
        <item name="android:textColor">@color/tv_color_red</item>
    </style>
    <style name="tv_style_black_dp_m">
        <item name="android:textSize">@dimen/home_tv_m_size</item>
        <item name="android:textColor">@color/tv_color_black</item>
    </style>
    <style name="tv_style_uncommon_white">
        <item name="android:textSize">@dimen/common_tv_size_l</item>
        <item name="android:textColor">@color/tv_color_white</item>
    </style>
    <style name="tv_style_uncommon_red_xl">
        <item name="android:textSize">@dimen/common_tv_size_xl</item>
        <item name="android:textColor">@color/tv_color_red</item>
    </style>
    <style name="tv_style_uncommon_black">
        <item name="android:textSize">@dimen/common_tv_size_xl</item>
        <item name="android:textColor">@color/tv_color_black</item>
    </style>
    <style name="common_padding_left_right">
        <item name="android:paddingLeft">@dimen/common_space_l</item>
        <item name="android:paddingRight">@dimen/common_space_l</item>
    </style>
    <style name="common_padding_l">
        <item name="android:paddingLeft">@dimen/common_space_l</item>
        <item name="android:paddingTop">@dimen/common_space_l</item>
        <item name="android:paddingRight">@dimen/common_space_l</item>
        <item name="android:paddingBottom">@dimen/common_space_l</item>
    </style>
    <style name="tv_style_center_black_dp_m">
        <item name="android:textSize">@dimen/home_tv_m_size</item>
        <item name="android:textColor">@color/tv_color_black</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
