<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="bottom_radiogroup">

        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:textColor">@drawable/selector_rb_home_color</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="tv_style_common">
        <item name="android:textSize">@dimen/common_tv_size_l</item>
        <item name="android:textColor">@color/tv_color_black</item>
    </style>
    <style name="tv_style_red_dp_l">
        <item name="android:textSize">@dimen/home_tv_l_size</item>
        <item name="android:textColor">@color/tv_color_red</item>
    </style>
    <style name="tv_style_gray_dp_m">
        <item name="android:textSize">@dimen/home_tv_s_size</item>
        <item name="android:textColor">@color/tv_color_gray</item>
    </style>

</resources>
